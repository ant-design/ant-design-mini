.ant-avatar {
  display: inline-flex;
  align-items: center;
}
.ant-avatar-image {
  width: 52px;
  height: 52px;
  border-radius: 4px;
}
.ant-avatar-image-x-small {
  width: 40px;
  height: 40px;
}
.ant-avatar-image-small {
  width: 44px;
  height: 44px;
}
.ant-avatar-image-medium {
  width: 52px;
  height: 52px;
}
.ant-avatar-image-large {
  width: 60px;
  height: 60px;
}
.ant-avatar-circle {
  border-radius: 100vh;
}
