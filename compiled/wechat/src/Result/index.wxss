.ant-result {
  position: relative;
  text-align: center;
  line-height: normal;
  box-sizing: border-box;
}
.ant-result-icon {
  font-size: 110rpx;
}
.ant-result-main {
  padding: 70rpx 24rpx;
  margin-bottom: 40rpx;
  line-height: 1.4;
  background-color: var(--color-card, #ffffff);
}
.ant-result-image {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 128rpx;
  height: 128rpx;
  margin: 0 auto;
  overflow: hidden;
  text-align: center;
  line-height: 128rpx;
}
.ant-result-image-success {
  color: var(--color-brand1, #1677ff);
}
.ant-result-image-error {
  color: var(--color-text-warning, #ff3b30);
}
.ant-result-image-info {
  color: var(--color-brand1, #1677ff);
}
.ant-result-image-warning {
  color: var(--color-orange-1, #ff8f1f);
}
.ant-result-image-wait {
  color: var(--color-pomonagreen-1, #00b578);
}
.ant-result-title {
  padding-top: 40rpx;
  font-size: 40rpx;
  color: var(--color-black, #000000);
  font-weight: 500;
}
.ant-result-title:empty {
  display: none;
}
.ant-result-message {
  padding-top: 16rpx;
  font-size: 32rpx;
  color: var(--color-text-primary, #333333);
}
.ant-result-message:empty {
  display: none;
}
