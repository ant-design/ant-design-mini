<view
  class="ant-empty {{className || ''}}"
  style="{{style || ''}}"
>
  <view class="ant-empty-{{size}}">
    <view class="ant-empty-image">
      <image
        class="ant-empty-image-element"
        mode="{{imageMode}}"
        src="{{image || 'https://mdn.alipayobjects.com/huamei_mnxlps/afts/img/A*J9z7RqVm1soAAAAAAAAAAAAADkqGAQ/original'}}"
      ></image>
    </view>
    <view class="ant-empty-text">
      <view class="ant-empty-text-main">
        <ant-auto-resize
          wx:if="{{title}}"
          text="{{title}}"
          min-font-size="24"
          max-font-size="40"
        >
          <block>{{title}}</block>
        </ant-auto-resize>
        <ant-auto-resize
          wx:else
          text="{{title}}"
          min-font-size="24"
          max-font-size="40"
        >
          <block>
            <slot name="title">{{title}}</slot>
          </block>
        </ant-auto-resize>
      </view>
      <view class="ant-empty-text-sub">
        <ant-auto-resize
          wx:if="{{message}}"
          text="{{message}}"
          min-font-size="24"
          max-font-size="40"
        >
          <block>{{message}}</block>
        </ant-auto-resize>
        <ant-auto-resize
          wx:else
          text="{{message}}"
          min-font-size="24"
          max-font-size="40"
        >
          <block>
            <slot name="message">{{message}}</slot>
          </block>
        </ant-auto-resize>
      </view>
    </view>
    <view
      wx:if="{{buttonInfo.list.length > 0}}"
      class="ant-empty-button ant-empty-button-layout-{{buttonInfo.layout}}"
    >
      <ant-button
        type="{{item.type}}"
        data-item="{{item}}"
        bind:tap="onClickButton"
        size="{{buttonInfo.layout === 'horizontal' ? 'small' : ''}}"
        inline="{{buttonInfo.layout === 'horizontal'}}"
        wx:for="{{buttonInfo.list}}"
        wx:for-index="index"
        wx:for-item="item"
      >{{item.text}}</ant-button>
    </view>
    <view class="ant-empty-extra">
      <slot name="extra"></slot>
    </view>
  </view>
</view>