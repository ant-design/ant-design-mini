.ant-form-item {
  background-color: #ffffff;
  padding: 12px 12px 12px 16px;
  position: relative;
}
.ant-form-item::after {
  content: '';
  position: absolute;
  background-color: #eeeeee;
  display: block;
  top: auto;
  right: 0;
  bottom: 0;
  left: 0;
  height: 1px;
  transform: scaleY(0.5);
}
.ant-form-item-line {
  display: flex;
  flex: 1;
  align-items: center;
  align-self: stretch;
  max-width: 100%;
  position: relative;
}
.ant-form-item-content {
  flex: 1;
}
.ant-form-item-content-horizontal {
  display: flex;
  align-items: center;
}
.ant-form-item-error-info {
  font-size: 13px;
  color: #ff3141;
  line-height: 18.5px;
  text-align: left;
  margin-top: 4px;
}
.ant-form-item-help-info {
  font-size: 13px;
  color: #666666;
  line-height: 18.5px;
  text-align: left;
  margin-top: 4px;
}
.ant-form-item-label {
  display: flex;
  align-items: center;
  font-size: 17px;
  line-height: 24px;
  overflow: visible;
  position: relative;
}
.ant-form-item-label-text {
  display: flex;
  align-items: center;
  position: relative;
}
.ant-form-item-label-help-content {
  font-size: 15px;
  text-align: center;
  white-space: nowrap;
}
.ant-form-item-label-horizontal {
  width: 85px;
  margin-right: 12px;
  color: #666666;
  font-size: 17px;
  line-height: 24px;
}
.ant-form-item-label-vertical {
  font-size: 17px;
  line-height: 21px;
  color: #666666;
  margin-bottom: 4px;
}
.ant-form-item-field {
  flex: 1;
}
.ant-form-item-field-horizontal {
  text-align: right;
}
.ant-form-item-extra {
  display: flex;
  align-items: center;
  font-size: 16px;
  color: #999999;
}
.ant-form-item-asterisk .ant-form-item-label-required .ant-form-item-label-text::before {
  content: '*';
  position: absolute;
  left: -9px;
  font-size: 15px;
  color: #ff3b30;
}
.ant-form-item-text-required .ant-form-item-label-required .ant-form-item-label-text::after {
  padding-left: 2px;
  content: '(必填)';
  display: block;
  left: -9px;
  font-size: 15px;
  color: #cccccc;
}
.ant-form-item-text-optional .ant-form-item-label .ant-form-item-label-text::after {
  padding-left: 2px;
  content: '(选填)';
  display: block;
  left: -9px;
  font-size: 15px;
  color: #cccccc;
}
.ant-form-item-text-optional .ant-form-item-label-required .ant-form-item-label-text::after {
  content: none;
}
