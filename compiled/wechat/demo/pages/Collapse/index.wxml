<ant-container
  title="基本使用"
  class="container"
>
  <ant-collapse
    items="{{items1}}"
    bind:change="onChange"
  ></ant-collapse>
</ant-container>
<ant-container
  title="手风琴效果"
  class="container"
>
  <ant-collapse
    accordion
    items="{{items1}}"
  ></ant-collapse>
</ant-container>
<ant-container
  title="列表项控制"
  class="container"
>
  <ant-button
    bind:tap="addItems"
    inline
  >添加items</ant-button>
  <ant-collapse items="{{items2}}"></ant-collapse>
</ant-container>
<ant-container
  title="带 Checkbox"
  class="container"
>
  <text>由于微信小程序平台的限制, Collapse 暂时不支持 Slot</text>
  <ant-collapse items="{{items3}}">
    <view
      class="title"
      slot="title"
      slot-scope="item"
    >
      <view class="collapse-item">
        <ant-checkbox
          data-index="{{item.index}}"
          bind:change="onCheckboxChange"
        ></ant-checkbox>{{item.value.title}}</view>
    </view>
    <view
      class="content"
      slot="content"
      slot-scope="item"
    >{{item.value.content}}</view>
  </ant-collapse>
</ant-container>