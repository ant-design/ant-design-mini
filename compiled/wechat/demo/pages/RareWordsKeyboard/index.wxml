<list header="基础使用">
  <container title="姓名">
    <ant-input
      placeholder="请输入姓名"
      value="{{value}}"
      bind:change="onInputChange"
    >
      <view
        slot="suffix"
        class="tips"
        bindtap="onTap"
      >生僻字？</view>
    </ant-input>
  </container>
  <list-item bindtap="onTap">默认键盘</list-item>
  <rare-words-keyboard
    visible="{{visible}}"
    bind:close="onClose"
    bindchange="onChange"
  ></rare-words-keyboard>
  <list-item bindtap="onTap2">不带蒙层</list-item>
  <rare-words-keyboard
    visible="{{visible2}}"
    showMask="{{false}}"
    bind:close="onClose2"
    bindchange="onChange"
  ></rare-words-keyboard>
  <list-item bindtap="onTap3">监听输入完成、出错的回调</list-item>
  <rare-words-keyboard
    visible="{{visible3}}"
    bind:close="onClose3"
    bindchange="onChange"
    bind:error="onKeyBoardError"
  ></rare-words-keyboard>
</list>