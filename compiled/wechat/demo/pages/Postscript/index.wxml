<container title="基础用法">
  <ant-postscript
    title="转账备注"
    quickInputs="{{quickInputs}}"
    bind:change="handleChange"
  ></ant-postscript>
</container>
<container title="连接快速输入">
  <ant-postscript
    title="拼接快速输入"
    placeholder="点击快速输入试试"
    quickInputs="{{quickInputs}}"
    combineSymbol="+"
    bind:change="handleChange2"
  ></ant-postscript>
</container>
<container title="无标题">
  <ant-postscript
    quickInputs="{{quickInputs2}}"
    combineSymbol=" "
    bind:change="handleChange3"
  ></ant-postscript>
</container>
<container title="最长输入限制">
  <ant-postscript
    maxLength="10"
    title="转账备注"
    placeholder="最长输入10个字"
    bind:change="handleChange4"
  ></ant-postscript>
</container>
<container title="自定义样式">
  <ant-postscript
    className="custom-postscript"
    title="转账备注"
    quickInputs="{{quickInputs}}"
    bind:change="handleChange5"
  ></ant-postscript>
</container>