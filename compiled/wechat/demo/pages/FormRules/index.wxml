<ant-form-input
  label="用户名"
  name="account"
  required
  message="需要输入用户名"
  bindref="handleRef"
></ant-form-input>
<ant-form-input
  label="密码"
  name="password"
  password
  bindref="handleRef"
></ant-form-input>
<ant-form-input
  label="重复密码"
  name="confirm"
  password
  dependencies="{{['password']}}"
  bindref="handleRef"
></ant-form-input>
<view class="buttons">
  <ant-button
    type="primary"
    bindtap="submit"
    style="margin-bottom: 12px"
  >提交</ant-button>
  <ant-button
    bindtap="reset"
    style="margin-bottom: 12px"
  >重置</ant-button>
  <ant-button bindtap="fill">Fill表单</ant-button>
</view>