<container title="基础用法">
  <ant-input
    placeholder="请输入内容"
    bind:change="onChange"
  ></ant-input>
</container>
<container title="初始值">
  <ant-input
    placeholder="请输入内容"
    defaultValue="这是antd mini小程序组件"
    bind:change="onChange"
  ></ant-input>
</container>
<container title="带清除按钮">
  <ant-input
    placeholder="请输入内容"
    allowClear
  ></ant-input>
</container>
<container title="带有前缀后缀">
  <ant-input
    placeholder="请输入内容"
    bind:change="onChange"
    allowClear
  >
    <view slot="prefix">￥</view>
    <view slot="suffix">RMB</view>
  </ant-input>
</container>
<container title="禁用状态">
  <ant-input
    placeholder="被禁用的输入框"
    disabled="{{true}}"
  ></ant-input>
</container>
<container title="受控模式">
  <ant-input
    controlled="{{true}}"
    value="{{value}}"
    placeholder="请输入内容"
    allowClear
    bind:change="handleChange"
  ></ant-input>
  <ant-button
    bind:tap="clear"
    inline
    size="small"
  >clear</ant-button>
</container>
<container title="受控模式-输入金额">
  <ant-input
    placeholder="请输入金额"
    value="{{money}}"
    bind:change="handleMoney"
    type="digit"
    className="input money"
    focusClassName="border"
    allowClear
  >
    <view slot="prefix">￥</view>
    <view slot="suffix">RMB</view>
  </ant-input>
</container>
<container title="非受控模式通过ref修改input">
  <ant-input
    placeholder="请输入内容"
    bind:change="onChange"
    bind:ref="handleRefInput"
  ></ant-input>
  <view>
    <ant-button
      inline
      bind:tap="clearByInputRef"
    >clear</ant-button>
  </view>
</container>
<container title="搜索框">
  <view class="search-line">
    <ant-input
      placeholder="请输入内容"
      bind:change="onChange"
      className="search-bar"
      focusClassName="search-bar-focus"
      confirmType="search"
      allowClear
      focus
      bind:confirm="onConfirm"
    >
      <ant-icon
        slot="prefix"
        type="SearchOutline"
      ></ant-icon>
      <ant-icon
        slot="suffix"
        type="AudioOutline"
      ></ant-icon>
    </ant-input>
    <view class="cancel">取消</view>
  </view>
</container>
<container title="Textarea基础用法">
  <ant-textarea
    placeholder="请输入内容"
    autoHeight
    bind:change="onChange"
  ></ant-textarea>
</container>
<container title="初始值">
  <ant-textarea
    placeholder="请输入内容"
    defaultValue="这是antd mini小程序组件"
    autoHeight
    bind:change="onChange"
  ></ant-textarea>
</container>
<container title="带清除按钮">
  <ant-textarea
    placeholder="请输入内容"
    autoHeight
    allowClear
  ></ant-textarea>
</container>
<container title="禁用状态">
  <ant-textarea
    placeholder="被禁用的输入框"
    disabled
  ></ant-textarea>
</container>
<container title="受控模式">
  <ant-textarea
    value="{{value}}"
    placeholder="请输入内容"
    allowClear
    bind:change="handleChange"
  ></ant-textarea>
  <ant-button
    bind:tap="clear"
    inline
    size="small"
  >clear</ant-button>
</container>
<container title="非受控模式通过ref修改input">
  <ant-textarea
    placeholder="请输入内容"
    allowClear
    bind:change="onChange"
    bind:ref="handleRefTextArea"
  ></ant-textarea>
  <view>
    <ant-button
      inline
      bind:tap="clearByTextAreaRef"
    >clear</ant-button>
  </view>
</container>
<container title="带有border">
  <ant-input
    className="custom"
    placeholder="请输入内容"
    bind:change="onChange"
  ></ant-input>
  <ant-input
    className="custom"
    placeholder="请输入内容"
    bind:change="onChange"
  >
    <ant-icon
      type="SearchOutline"
      slot="prefix"
    ></ant-icon>
    <ant-icon
      type="AudioOutline"
      slot="suffix"
    ></ant-icon>
  </ant-input>
  <ant-textarea
    className="custom"
    placeholder="请输入内容"
    bind:change="onChange"
  ></ant-textarea>
</container>
<container title="自定义背景颜色">
  <ant-input
    className="custom-color"
    placeholder="请输入内容"
    bind:change="onChange"
  ></ant-input>
  <ant-textarea
    className="custom-color"
    placeholder="请输入内容"
    bind:change="onChange"
  ></ant-textarea>
</container>
<container title="自定义 placeholderStyle">
  <ant-input
    placeholderStyle="color: red;"
    placeholder="请输入内容"
    bind:change="onChange"
  ></ant-input>
</container>