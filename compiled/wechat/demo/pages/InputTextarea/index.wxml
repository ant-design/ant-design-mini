<view class="navigation-bar"></view>
<ant-container title="基础用法">
  <ant-textarea
    placeholder="请输入内容"
    autoHeight
    bind:change="onChange"
  ></ant-textarea>
</ant-container>
<ant-container title="初始值">
  <ant-textarea
    placeholder="请输入内容"
    defaultValue="这是antd mini小程序组件"
    autoHeight
    bind:change="onChange"
  ></ant-textarea>
</ant-container>
<ant-container title="带清除按钮">
  <ant-textarea
    placeholder="请输入内容"
    autoHeight
    allowClear
  ></ant-textarea>
</ant-container>
<ant-container title="禁用状态">
  <ant-textarea
    placeholder="被禁用的输入框"
    disabled
  ></ant-textarea>
</ant-container>
<ant-container title="受控模式">
  <ant-textarea
    value="{{value}}"
    placeholder="请输入内容"
    allowClear
    bind:change="handleChange"
  ></ant-textarea>
  <ant-button
    bind:tap="clear"
    inline
    size="small"
  >clear</ant-button>
</ant-container>
<ant-container title="非受控模式通过ref修改input">
  <ant-textarea
    placeholder="请输入内容"
    allowClear
    bind:change="onChange"
    bind:ref="handleRef"
  ></ant-textarea>
  <view>
    <ant-button
      inline
      bind:tap="clearByInputRef"
    >clear</ant-button>
  </view>
</ant-container>