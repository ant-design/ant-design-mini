<ant-container title="基础选择器">
  <ant-list header="基础用法">
    <ant-list-item>选择城市<ant-picker
        slot="extra"
        bind:cancel="handleDismiss"
        bind:visiblechange="handleTriggerPicker"
        bind:ok="handleOk"
        defaultValue="{{defaultValue}}"
        placeholder="请选择"
        title="请选择"
        bind:change="handleChange"
        options="{{list}}"
        emptyText="暂无数据"
      ></ant-picker>
    </ant-list-item>
    <ant-list-item>选择城市（点击蒙层不关闭）<ant-picker
        slot="extra"
        bind:cancel="handleDismiss"
        bind:visiblechange="handleTriggerPicker"
        bind:ok="handleOk"
        defaultValue="{{defaultValue}}"
        placeholder="请选择"
        title="请选择"
        bind:change="handleChange"
        maskClosable="{{false}}"
        options="{{list}}"
      ></ant-picker>
    </ant-list-item>
  </ant-list>
  <ant-list header="受控模式">
    <ant-list-item>选择城市<ant-picker
        slot="extra"
        bind:ok="handleControlledOk"
        value="{{value}}"
        placeholder="请选择"
        title="请选择"
        options="{{list}}"
      >
        <view
          slot="content"
          slot-scope="prop"
        >已选择：{{prop.value}}</view>
      </ant-picker>
    </ant-list-item>
    <view class="btn-wrapper">
      <ant-button
        inline
        bind:tap="handleChangeControlled"
        style="margin-right: 8px"
      >选择深圳</ant-button>
      <ant-button
        inline
        bind:tap="handleClearControlled"
      >清空</ant-button>
    </view>
  </ant-list>
  <ant-list header="对象用法">
    <ant-list-item>选择日期<ant-picker
        slot="extra"
        bind:cancel="handleDismiss"
        bind:visiblechange="handleTriggerPicker"
        bind:ok="handleOk"
        placeholder="请选择"
        title="请选择"
        bind:change="handleChange"
        options="{{weekList}}"
      ></ant-picker>
    </ant-list-item>
  </ant-list>
  <ant-list header="多列复杂类型数据">
    <ant-list-item>请选择时间<ant-picker
        slot="extra"
        placeholder="请选择"
        bind:visiblechange="handleTriggerPicker"
        defaultValue="{{['Tues', 'pm']}}"
        title="请选择"
        bind:ok="handleOk"
        onFormat="{{formatTime ? formatTime : 'formatTime'}}"
        options="{{columns}}"
      ></ant-picker>
    </ant-list-item>
  </ant-list>
  <ant-container style="margin-top: 20rpx">
    <ant-list header="多列复杂类型数据">
      <ant-list-item>请选择时间<ant-picker
          slot="extra"
          visible="{{pickerVisible}}"
          placeholder="请选择"
          bind:visiblechange="handleTriggerControlledPicker"
          defaultValue="{{['Tues', 'pm']}}"
          title="请选择"
          bind:ok="handleOk"
          onFormat="{{formatTime ? formatTime : 'formatTime'}}"
          options="{{columns}}"
        ></ant-picker>
      </ant-list-item>
    </ant-list>
    <ant-button
      size="medium"
      type="primary"
      bind:tap="handleOpenPicker"
    >打开 Picker</ant-button>
  </ant-container>
</ant-container>
<ant-container title="级联选择器">
  <ant-list header="基础用法">
    <ant-list-item>请选择省市<ant-cascader-picker
        slot="extra"
        placeholder="请选择归属地"
        options="{{cityList}}"
        bind:change="handleCascaderPickerChange"
        bind:ok="handleCascaderOnOk"
        bind:cancel="handleDismiss"
      ></ant-cascader-picker>
    </ant-list-item>
  </ant-list>
  <ant-list header="默认值">
    <ant-list-item>请选择城市<ant-cascader-picker
        slot="extra"
        defaultValue="{{['34', '330']}}"
        placeholder="请选择城市"
        options="{{cityList}}"
        bind:change="handleCascaderPickerChange"
        bind:ok="handleCascaderOnOk"
      ></ant-cascader-picker>
    </ant-list-item>
  </ant-list>
  <ant-list header="受控模式">
    <ant-list-item>请选择城市<ant-cascader-picker
        slot="extra"
        value="{{cascaderValue}}"
        placeholder="请选择城市"
        options="{{cityList}}"
        bind:change="handleCascaderPickerChange"
        bind:ok="handleCascaderControlledOk"
      ></ant-cascader-picker>
    </ant-list-item>
    <view class="btn-wrapper">
      <ant-button
        inline
        bind:tap="handleCascaderChangeControlled"
        style="margin-right: 8px"
      >选择上海</ant-button>
      <ant-button
        inline
        bind:tap="handleCascaderClearControlled"
      >清空</ant-button>
    </view>
  </ant-list>
  <ant-container style="margin-top: 20rpx">
    <ant-list header="外部控制选择器是否显示">
      <ant-list-item>请选择省市<ant-cascader-picker
          slot="extra"
          visible="{{cascaderVisible}}"
          placeholder="请选择归属地"
          options="{{cityList}}"
          bind:change="handleCascaderPickerChange"
          bind:visiblechange="handleCascaderTriggerControlledPicker"
          bind:ok="handleCascaderOnOk"
          bind:cancel="handleDismiss"
        ></ant-cascader-picker>
      </ant-list-item>
    </ant-list>
    <ant-button
      size="medium"
      type="primary"
      bind:tap="handleCascaderOpenPicker"
    >打开 CascaderPicker</ant-button>
  </ant-container>
</ant-container>