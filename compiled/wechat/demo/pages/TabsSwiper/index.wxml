<ant-tabs
  items="{{items}}"
  current="{{current}}"
  bindchange="onChange"
>
  <swiper
    current="{{current}}"
    autoplay="{{false}}"
    vertical="{{false}}"
    circular="{{false}}"
    bindchange="onSwipeChange"
  >
    <block
      wx:for="{{items}}"
      wx:for-index="index"
      wx:for-item="item"
    >
      <swiper-item>
        <view class="content">{{item.content}}</view>
      </swiper-item>
    </block>
  </swiper>
</ant-tabs>