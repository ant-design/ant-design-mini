<ant-container title="步骤条控制">
  <ant-steps
    items="{{items}}"
    current="{{current}}"
  ></ant-steps>
  <ant-button
    bindtap="onNextTap"
    type="primary"
  >
    <view wx:if="{{current < items.length - 1}}">下一步</view>
    <view wx:else>完成</view>
  </ant-button>
  <ant-button
    wx:if="{{current > 0}}"
    bindtap="onPrevTap"
  >上一步</ant-button>
</ant-container>