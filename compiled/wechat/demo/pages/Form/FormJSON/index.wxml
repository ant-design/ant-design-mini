<view class="navigation-bar"></view>
<form-json
  config="{{config}}"
  onSuccess="onSuccess"
  bind:ref="handleFormJSONRef"
>
  <view
    slot="custom-input"
    slot-scope="item"
  >
    <form-input
      label="{{item.value.label}}"
      name="{{item.value.name}}"
      required="{{item.value.required}}"
      placeholder="{{item.value.placeholder}}"
      message="{{item.value.message}}"
      bind:ref="handleRef"
    ></form-input>
  </view>
  <view
    slot="custom-switch"
    slot-scope="item"
  >
    <form-switch
      label="{{item.value.label}}"
      name="{{item.value.name}}"
      message="{{item.value.message}}"
      bind:ref="handleRef"
    ></form-switch>
  </view>
</form-json>