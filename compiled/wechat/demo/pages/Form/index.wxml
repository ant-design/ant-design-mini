<form-input
  label="用户名"
  name="account"
  placeholder="请输入用户名"
  tooltip="用户名说明"
  allowClear
  bind:ref="handleRef" />
<form-input
  label="密码"
  name="password"
  placeholder="请输入密码"
  allowClear
  bind:ref="handleRef">
  <view slot="tooltip">
    <ant-icon
      bind:tap="showToast"
      type="QuestionCircleOutline" />
  </view>
</form-input>
<form-input
  label="地址"
  name="address"
  placeholder="请输入地址"
  allowClear
  bind:ref="handleRef" />
<form-switch
  label="选择"
  name="needDelivery"
  bind:ref="handleRef" />
<form-stepper
  label="数量"
  name="quantity"
  bind:ref="handleRef" />
<form-picker
  label="水果"
  arrow
  name="fruit"
  options="{{ fruitList }}"
  bind:ref="handleRef" />
<form-date-picker
  label="出生日期"
  arrow
  name="birthday"
  bind:ref="handleRef" />
<form-range-picker
  label="时间范围"
  arrow
  name="range"
  bind:ref="handleRef" />
<form-cascader-picker
  label="城市"
  arrow
  options="{{ cityList }}"
  name="city"
  tooltip="选择城市"
  placeholder="请输入城市"
  bind:ref="handleRef" />
<form-radio-group
  label="动物单选"
  name="animalChoose"
  color="red"
  options="{{ radioGroupOptions }}"
  bind:ref="handleRef" />
<form-checkbox-group
  label="蔬菜多选"
  name="fruitChoose"
  options="{{ checkboxGroupOptions }}"
  bind:ref="handleRef" />
<form-selector
  label="喜好"
  name="likeChoose"
  options="{{ selectorOptions }}"
  bind:ref="handleRef" />
<form-slider
  label="选择分数"
  name="slider"
  showTooltip
  bind:ref="handleRef" />
<form-upload-image
  label="图片"
  name="image"
  onUpload="{{ onUpload ? onUpload : 'onUpload' }}"
  bind:ref="handleRef" />
<form-textarea
  label="说明"
  name="description"
  placeholder="请输入说明"
  allowClear
  autoHeight
  bind:ref="handleRef" />
<form-rate
  label="评分"
  name="rate"
  bind:ref="handleRef" />
<view class="buttons">
  <ant-button
    type="primary"
    bind:tap="submit"
    style="margin-bottom: 12px">
    提交
  </ant-button>
  <ant-button bind:tap="reset">重置</ant-button>
</view>
<ant-toast
  content="密码的自定义 tooltip"
  visible="{{ toastShow }}"
  onClose="handleCloseToast" />
