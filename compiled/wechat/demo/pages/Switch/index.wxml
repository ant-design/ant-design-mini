<view class="navigation-bar"></view>
<view>
  <ant-container title="基础用法">
    <ant-switch></ant-switch>
  </ant-container>
  <ant-container title="有默认值">
    <ant-switch
      defaultChecked="{{true}}"
      bind:change="onChange"
    ></ant-switch>
  </ant-container>
  <ant-container title="文字和图标">
    <ant-switch
      checkedText="开"
      uncheckedText="关"
      bind:change="onChange"
    ></ant-switch>
  </ant-container>
  <ant-container title="自定义颜色">
    <ant-switch
      defaultChecked="{{true}}"
      color="#00b578"
    ></ant-switch>
  </ant-container>
  <ant-container title="禁用状态">
    <ant-switch
      defaultChecked="{{true}}"
      disabled="{{true}}"
    ></ant-switch>
    <ant-switch disabled="{{true}}"></ant-switch>
  </ant-container>
  <ant-container title="加载状态">
    <ant-switch loading></ant-switch>
  </ant-container>
  <ant-container title="不同尺寸">
    <view class="line">
      <view>medium：</view>
      <ant-switch size="medium"></ant-switch>
    </view>
    <view class="line">
      <view>small：</view>
      <ant-switch size="small"></ant-switch>
    </view>
    <view class="line">
      <view>x-small：</view>
      <ant-switch size="x-small"></ant-switch>
    </view>
  </ant-container>
  <ant-container title="受控模式">
    <ant-switch
      checked="{{checked}}"
      bind:change="handleChange"
      defaultChecked="{{true}}"
    ></ant-switch>
    <ant-button
      style="margin-top: 10px"
      bind:tap="handleChangeByButton"
    >切换</ant-button>
  </ant-container>
</view>