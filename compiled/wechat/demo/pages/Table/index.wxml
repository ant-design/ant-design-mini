<ant-container
  title="基础用法"
  className="list"
>
  <ant-table
    dataSource="{{dataSource}}"
    columns="{{columns}}"
  ></ant-table>
</ant-container>
<ant-container
  title="局部滚动"
  className="list"
>
  <ant-table
    dataSource="{{dataSource}}"
    columns="{{columns}}"
    scrollHeight="300rpx"
  ></ant-table>
</ant-container>
<ant-container
  title="插槽-无数据"
  className="list"
>
  <ant-table
    dataSource="{{[]}}"
    columns="{{columns}}"
    className="empty-table-table"
  >
    <image
      class="table-empty-img"
      src="https://mdn.alipayobjects.com/huamei_9iifqq/afts/img/A*AWeXQYuIODwAAAAAAAAAAAAADjWYAQ/original"
    ></image>
  </ant-table>
</ant-container>
<ant-container
  title="设置一行铺满展示"
  className="list"
>
  <ant-table
    dataSource="{{dataSource}}"
    columns="{{fullColumns}}"
    displayType="FULL"
    className="full-table-table"
  ></ant-table>
</ant-container>