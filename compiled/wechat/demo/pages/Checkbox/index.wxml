<wxs
  src="./index.wxs"
  module="utils"
></wxs>
<ant-container title="Checkbox 用法">
  <view>
    <ant-checkbox bind:change="onChange">基础使用</ant-checkbox>
  </view>
  <view class="line">
    <ant-checkbox defaultChecked="{{true}}">设置默认值</ant-checkbox>
  </view>
  <view class="line">
    <ant-checkbox disabled>禁用模式未选中</ant-checkbox>
    <ant-checkbox
      defaultChecked
      disabled
    >禁用模式已选中</ant-checkbox>
  </view>
  <view class="line">
    <ant-checkbox
      color="red"
      defaultChecked
    >自定义颜色</ant-checkbox>
  </view>
  <view class="line">
    <view style="margin-bottom: 20rpx;">
      <ant-checkbox
        checked="{{checked}}"
        bind:change="handleCheckedChange"
      >受控模式</ant-checkbox>
    </view>
    <ant-button bind:tap="toggleChange">切换</ant-button>
  </view>
</ant-container>
<ant-container title="CheckboxGroup 用法">
  <view>
    <view class="title">基础使用</view>
    <ant-checkbox-group
      options="{{options}}"
      bindchange="onChange"
    ></ant-checkbox-group>
  </view>
  <view class="line">
    <view class="title">设置默认值</view>
    <ant-checkbox-group
      defaultValue="{{['banana']}}"
      options="{{options}}"
      bindchange="onChange"
    ></ant-checkbox-group>
  </view>
  <view class="line">
    <view class="title">横向布局</view>
    <ant-checkbox-group
      options="{{options}}"
      position="horizontal"
    ></ant-checkbox-group>
  </view>
  <view class="line">
    <view class="title">禁用模式</view>
    <ant-checkbox-group
      options="{{options}}"
      disabled
    ></ant-checkbox-group>
  </view>
  <view class="line">
    <view class="title">受控模式</view>
    <ant-checkbox-group
      value="{{value}}"
      options="{{options}}"
      bindchange="handleValueChange"
    ></ant-checkbox-group>
  </view>
  <view class="line">
    <view class="title">自定义颜色</view>
    <ant-checkbox-group
      options="{{options}}"
      defaultValue="{{['apple', 'banana']}}"
      color="red"
    ></ant-checkbox-group>
  </view>
</ant-container>
<ant-container title="CheckboxCustomGroup 用法">
  <block
    wx:for="{{customOptions}}"
    wx:for-index="index"
    wx:for-item="option"
  >
    <ant-list header="{{option.title}}">
      <block
        wx:for="{{option.list}}"
        wx:for-index="index"
        wx:for-item="item"
      >
        <ant-list-item>
          <ant-checkbox
            data-value="{{item.value}}"
            checked="{{utils.indexOf(customValue, item.value) > -1}}"
            bind:change="handleCustomChange"
          >{{item.title}}</ant-checkbox>
        </ant-list-item>
      </block>
    </ant-list>
  </block>
</ant-container>