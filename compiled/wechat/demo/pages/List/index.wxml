<view class="navigation-bar"></view>
<view style="padding-bottom: 100rpx;">
  <ant-list
    header="基础用法"
    radius="{{radius}}"
  >
    <ant-list-item>1</ant-list-item>
    <ant-list-item>2</ant-list-item>
    <ant-list-item>3</ant-list-item>
  </ant-list>
  <ant-list
    header="可点击列表"
    radius="{{radius}}"
  >
    <ant-list-item
      image="PayCircleOutline"
      bind:tap="handleTap"
      brief="总资产数量"
      extra="详细信息"
      data-info="总资产"
    >总资产</ant-list-item>
    <ant-list-item
      image="SetOutline"
      arrow="right"
      extraBrief="详细信息"
      catch:tap="catchTap"
      data-info="设置"
    >设置</ant-list-item>
    <ant-list-item
      image="https://gw.alipayobjects.com/mdn/rms_ce4c6f/afts/img/A*XMCgSYx3f50AAAAAAAAAAABkARQnAQ"
      bind:tap="handleTap"
      brief="图片描述"
      data-info="图片"
    >图片<ant-button
        slot="extra"
        size="small"
        inline
      >胶囊按钮</ant-button>
    </ant-list-item>
  </ant-list>
  <ant-list
    radius="{{radius}}"
    header="复杂布局"
  >
    <ant-list-item
      extraBrief="未开启"
      arrow="right"
    >大字号模式</ant-list-item>
    <ant-list-item
      brief="管理已授权的产品和设备"
      arrow="{{item.arrow}}"
    >授权管理</ant-list-item>
  </ant-list>
  <ant-list
    radius="{{radius}}"
    header="禁用状态"
  >
    <ant-list-item
      disabled
      image="UnorderedListOutline"
      arrow="right"
      data-info="账单"
    >账单</ant-list-item>
    <ant-list-item
      disabled
      image="PayCircleOutline"
      arrow="right"
      data-info="总资产"
    >总资产</ant-list-item>
  </ant-list>
</view>