<view class="navigation-bar"></view>
<list header="数字输入框示例">
  <list-item>
    <view
      class="number-content {{value ? '' : 'number-placeholder'}}"
      catch:tap="onNumberFocus"
    >
      <!--display: inline-->
      <text wx:if="{{value}}">{{value}}</text>
      <!--display: inline-->
      <text
        wx:else
        class="number-content-tip"
      >0.00</text>
      <view
        wx:if="{{visible}}"
        class="number-light"
        style="{{value ? 'position: static;' : 'position: absolute;'}}"
      ></view>
    </view>
  </list-item>
  <number-keyboard
    visible="{{visible}}"
    point="{{false}}"
    closeable="{{true}}"
    value="{{value}}"
    bind:change="onChange"
    bind:close="onClose"
  ></number-keyboard>
</list>