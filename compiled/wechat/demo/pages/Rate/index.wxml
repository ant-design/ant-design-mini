<ant-container title="基础用法">
  <ant-rate
    defaultValue="{{3}}"
    bindchange="onChange"
  ></ant-rate>
</ant-container>
<ant-container title="半星">
  <ant-rate
    defaultValue="{{3.5}}"
    allowHalf
    bindchange="onChange"
  ></ant-rate>
</ant-container>
<ant-container title="清除">
  <ant-rate
    defaultValue="{{4}}"
    bindchange="onChange"
  ></ant-rate>
  <view class="description">allowClear: true</view>
  <ant-rate
    defaultValue="{{4}}"
    allowClear="{{false}}"
    bindchange="onChange"
  ></ant-rate>
  <view class="description">allowClear: false</view>
</ant-container>
<ant-container title="只读">
  <ant-rate
    defaultValue="{{3.5}}"
    readonly
  ></ant-rate>
</ant-container>
<ant-container title="多个count">
  <ant-rate
    defaultValue="{{5}}"
    count="{{8}}"
  ></ant-rate>
</ant-container>
<ant-container title="受控模式">
  <view style="display: flex; justify-content: space-around">
    <view>
      <ant-rate
        value="{{value}}"
        bindchange="handleChange"
      ></ant-rate>
      <view style="margin-top: 8px">
        <ant-stepper
          value="{{value}}"
          min="{{0}}"
          max="{{5}}"
          bindchange="handleChange"
        ></ant-stepper>
      </view>
    </view>
    <view>
      <ant-rate value="{{value}}"></ant-rate>
      <view class="description">无 onChange 函数</view>
    </view>
  </view>
</ant-container>