<ant-container title="受控模式">
  <ant-uploader
    fileList="{{fileList}}"
    bindchange="onChange"
    onUpload="{{onUpload ? onUpload : 'onUpload'}}"
  ></ant-uploader>
</ant-container>
<ant-container title="手动触发上传">
  <ant-uploader
    bindref="handleUploaderRef"
    fileList="{{fileList}}"
    bindchange="onChange"
    onUpload="{{onUpload ? onUpload : 'onUpload'}}"
  ></ant-uploader>
  <ant-button
    size="medium"
    bindtap="upload"
    type="primary"
  >上传</ant-button>
</ant-container>