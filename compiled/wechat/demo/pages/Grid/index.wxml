<ant-container title="3列">
  <ant-grid
    items="{{items3}}"
    bind:tap="handleTapItem"
    iconSize="{{36}}"
    columns="{{3}}"
  ></ant-grid>
</ant-container>
<ant-container title="4列">
  <ant-grid
    items="{{items4}}"
    bind:tap="handleTapItem"
    columns="{{4}}"
  ></ant-grid>
</ant-container>
<ant-container title="5列">
  <ant-grid
    items="{{items5}}"
    bind:tap="handleTapItem"
    columns="{{5}}"
  ></ant-grid>
</ant-container>
<ant-container title="换行">
  <ant-grid
    items="{{items5More}}"
    bind:tap="handleTapItem"
    columns="{{5}}"
  ></ant-grid>
</ant-container>
<ant-container title="5列-展示分割线">
  <ant-grid
    items="{{items5}}"
    bind:tap="handleTapItem"
    columns="{{5}}"
    showDivider
  ></ant-grid>
</ant-container>
<ant-container title="2列-带描述">
  <ant-grid
    items="{{items2withDesc}}"
    bind:tap="handleTapItem"
    iconSize="{{36}}"
    columns="{{2}}"
  ></ant-grid>
</ant-container>
<ant-container title="3列-带描述">
  <ant-grid
    items="{{items3withDesc}}"
    iconSize="{{36}}"
    bind:tap="handleTapItem"
    columns="{{3}}"
  ></ant-grid>
</ant-container>
<ant-container title="2列-元素横向布局">
  <ant-grid
    items="{{items2}}"
    bind:tap="handleTapItem"
    columns="{{2}}"
    gridItemLayout="horizontal"
  ></ant-grid>
</ant-container>
<ant-container title="2行-元素横向布局">
  <ant-grid
    items="{{items4}}"
    gridItemLayout="horizontal"
    bind:tap="handleTapItem"
    columns="{{2}}"
  ></ant-grid>
</ant-container>
<ant-container title="3列-元素横向布局">
  <ant-grid
    items="{{items3}}"
    bind:tap="handleTapItem"
    columns="{{3}}"
    gridItemLayout="horizontal"
  ></ant-grid>
</ant-container>
<ant-container title="2列-带描述">
  <ant-grid
    items="{{items2withDesc}}"
    bind:tap="handleTapItem"
    iconSize="{{36}}"
    gridItemLayout="horizontal"
    columns="{{2}}"
  ></ant-grid>
</ant-container>
<ant-container title="可滑动">
  <ant-grid
    items="{{scrollItems}}"
    bind:tap="handleTapItem"
    mode="scroll"
  ></ant-grid>
</ant-container>
<ant-container title="滑块可滑动">
  <swiper
    indicatorDots="{{true}}"
    autoplay="{{true}}"
    vertical="{{false}}"
    interval="{{1000}}"
    circular="{{false}}"
    duration="{{1500}}"
  >
    <swiper-item
      wx:for="{{[1, 2, 3, 4]}}"
      wx:for-index="index"
      wx:for-item="item"
      key="{{'swiper-item-' + index}}"
    >
      <ant-grid
        items="{{items5More}}"
        bind:tap="handleTapItem"
        columns="{{5}}"
      ></ant-grid>
    </swiper-item>
  </swiper>
</ant-container>
<ant-container title="自定义图标大小">
  <ant-grid
    items="{{itemsCustom}}"
    bind:tap="handleTapItem"
    columns="{{5}}"
    iconSize="{{44}}"
  ></ant-grid>
</ant-container>