<ant-container title="2列">
  <ant-grid
    items="{{items2}}"
    bindtap="handleTapItem"
    columns="{{2}}"
  ></ant-grid>
</ant-container>
<ant-container title="3列">
  <ant-grid
    items="{{items3}}"
    bindtap="handleTapItem"
    columns="{{3}}"
  ></ant-grid>
</ant-container>
<ant-container title="4列">
  <ant-grid
    items="{{items4}}"
    bindtap="handleTapItem"
    columns="{{4}}"
  ></ant-grid>
</ant-container>
<ant-container title="5列">
  <ant-grid
    items="{{items5}}"
    bindtap="handleTapItem"
    columns="{{5}}"
  ></ant-grid>
</ant-container>
<ant-container title="5列-展示分割线">
  <ant-grid
    items="{{items5}}"
    bindtap="handleTapItem"
    columns="{{5}}"
    showDivider
  ></ant-grid>
</ant-container>
<ant-container title="2列-带描述">
  <ant-grid
    items="{{items2withDesc}}"
    bindtap="handleTapItem"
    columns="{{2}}"
  ></ant-grid>
</ant-container>
<ant-container title="3列-带描述">
  <ant-grid
    items="{{items3withDesc}}"
    bindtap="handleTapItem"
    columns="{{3}}"
  ></ant-grid>
</ant-container>
<ant-container title="2列-元素横向布局">
  <ant-grid
    items="{{items2}}"
    bindtap="handleTapItem"
    columns="{{2}}"
    gridItemLayout="horizontal"
  ></ant-grid>
</ant-container>
<ant-container title="3列-元素横向布局">
  <ant-grid
    items="{{items3}}"
    bindtap="handleTapItem"
    columns="{{3}}"
    gridItemLayout="horizontal"
  ></ant-grid>
</ant-container>
<ant-container title="可滑动">
  <ant-grid
    items="{{scrollItems}}"
    bindtap="handleTapItem"
    mode="scroll"
  ></ant-grid>
</ant-container>
<ant-container title="自定义图标大小">
  <ant-grid
    items="{{itemsCustom}}"
    bindtap="handleTapItem"
    columns="{{5}}"
    iconSize="{{44}}"
  ></ant-grid>
</ant-container>