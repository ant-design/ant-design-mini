<view class="navigation-bar"></view>
<list header="数字键盘示例: 金额输入">
  <list-item>
    <view
      class="number-content {{value ? '' : 'number-placeholder'}}"
      catchTap="onAmountFocus"
    >
      <!--display: inline-->
      <text a:if="{{value}}">{{value}}</text>
      <!--display: inline-->
      <text
        a:else
        class="number-content-tip"
      >0.00</text>
      <view
        a:if="{{visible}}"
        class="number-light"
        style="position: {{value ? 'static' : 'absolute'}}"
      ></view>
    </view>
  </list-item>
  <number-keyboard
    visible="{{visible}}"
    closeable="{{true}}"
    value="{{value}}"
    onChange="onChange"
    onClose="onClose"
  ></number-keyboard>
</list>