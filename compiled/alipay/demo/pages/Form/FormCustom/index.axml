<view class="navigation-bar"></view>
<form-input
  label="用户名"
  name="account"
  required
  message="需要输入用户名"
  placeholder="请输入用户名"
  position="vertical"
  inputClassName="input"
  ref="handleRef"
></form-input>
<form-checklist
  label="喜欢"
  name="like"
  required
  message="需要选择"
  options="{{likeOptions}}"
  position="vertical"
  ref="handleRef"
></form-checklist>
<form-location
  label="位置"
  name="location"
  required
  message="需要选择位置"
  position="vertical"
  ref="handleRef"
></form-location>
<view class="buttons">
  <ant-button
    type="primary"
    onTap="submit"
    className="button"
  >
    提交
  </ant-button>
  <ant-button
    onTap="reset"
    className="button"
  >
    重置
  </ant-button>
</view>