.t-swipe {
  width: 100%;
  margin: 0 auto;
  background-color: #f5f5f5;
}
.t-swipe-item {
  font-size: 16px;
  color: #333333;
}
.t-swipe-item-title {
  width: 100%;
  height: 45px;
  line-height: 50px;
  font-size: 14px;
  color: #999999;
  text-indent: 1em;
}
.t-swipe-item-con {
  height: 65px;
  line-height: 65px;
  width: 100%;
}
.t-swipe-item-con-view {
  background-color: #ffffff;
  text-indent: 1em;
  position: relative;
  height: 100%;
  color: #333333;
}
.t-swipe-item-con-view::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  max-height: 1px;
  min-height: 1px;
  transform: scaleY(0.5);
  background-color: #eeeeee;
}
